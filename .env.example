# ========================================
# バックエンド環境変数
# ========================================

# サーバー設定
API_PORT=3000
NODE_ENV=development

# データベース設定
DATABASE_URL=postgresql://user:password@postgres:5432/paypay_db

# JWT 設定
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRY=7d

# ロギング設定
LOG_LEVEL=info
LOG_FILE=logs/app.log

# ========================================
# フロントエンド環境変数
# ========================================

VITE_API_URL=http://localhost:3000/api
VITE_APP_NAME=PayPay Investment Helper

# ========================================
# Python 分析エンジン環境変数
# ========================================

# サーバー設定
PYTHON_SERVICE_PORT=5000
PYTHON_ENV=development

# 分析設定
ANALYSIS_INTERVAL=1440
BACKTEST_DAYS=365
YFINANCE_TIMEOUT=30

# テクニカル指標パラメータ
MA_PERIODS=5,20,50
RSI_PERIOD=14
MACD_FAST=12
MACD_SLOW=26
MACD_SIGNAL=9

# ========================================
# 共通設定
# ========================================

# タイムゾーン
TZ=Asia/Tokyo

# デバッグモード
DEBUG=false
